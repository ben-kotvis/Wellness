@page "/"

@inject HttpClient Http
@using Wellness.Client.Components.MonthsMenu
@using Wellness.Client.Components.UserParticipation.Activities.List
@inherits Wellness.Client.Pages.IndexComponent

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatAppBarTitle>Corporate Wellness Manager</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatIconButton Icon="account_circle" OnClick="@ViewModel.OnClick" @ref="ViewModel.accountButton"></MatIconButton>
                <MatMenu @ref="ViewModel.accountMenu">
                    <MatList>
                        <MatListItem>Item 1</MatListItem>
                        <MatListItem>Item 2</MatListItem>
                    </MatList>
                </MatMenu>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
</MatAppBarContainer>
@if (ViewModel.participation == null)
{
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
}
else
{

    <div class="main">
        <div class="content">
            <MonthsMenu OnMonthChanged="ViewModel.MonthChanged" />

            <UserActivities ActivityParticipations="@ViewModel.participation.Activities" />
        </div>
    </div>

}