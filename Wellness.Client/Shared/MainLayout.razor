@inherits LayoutComponentBase
@using Wellness.Model


<div class="main">
    <div class="top-row px-4">

        <AppBar Position="@AppBarPosition.Static">
            <Toolbar>
                <IconButton Edge="@IconButtonEdge.Start"
                            Style="margin-right: 16px;"
                            Color="@Color.Inherit"
                            aria-label="menu">
                    <MenuIcon />
                </IconButton>
                <Typography Variant="@TypographyVariant.H6"
                            Style="flex-grow: 1;">
                    News
                </Typography>
                <Button Color="@Color.Inherit">
                    Login
                </Button>
            </Toolbar>
        </AppBar>
    </div>


    <div class="content px-4">

        @Body

    </div>
</div>

