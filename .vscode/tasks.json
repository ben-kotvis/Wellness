{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
              "args": [
                "build",
                "${workspaceFolder}/Wellness.Server/Wellness.Server.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
              ],
              "group": "build",
              "presentation": {
                "reveal": "silent"
              },
              "problemMatcher": "$msCompile"
        },    
        {
            "label": "build api",
            "command": "dotnet",
            "type": "shell",
              "args": [
                "build",
                "${workspaceFolder}/Wellness.Api/Wellness.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
              ],
              "group": "build",
              "presentation": {
                "reveal": "silent"
              },
              "problemMatcher": "$msCompile"
        },    
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Wellness.Client/Wellness.Client.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Wellness.Client/Wellness.Client.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}